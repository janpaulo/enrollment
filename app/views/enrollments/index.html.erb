<p id="notice"><%= notice %></p>
<div class="titlenew">

<h1>Student Information</h1>

</div>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Fname</th>
      <th>Lname</th>
      <th>Mobile</th>
      <th>Course</th>
      <th>Sem no</th>
      <th>Year</th>
      <th>Birthday</th>
      <th>Address</th>
      <th>Birth place</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.student_id %></td>
        <td><%= enrollment.fname %></td>
        <td><%= enrollment.lname %></td>
        <td><%= enrollment.mobile %></td>
        <td><%= enrollment.course %></td>
        <td><%= enrollment.sem_no %></td>
        <td><%= enrollment.year %></td>
        <td><%= enrollment.birthday %></td>
        <td><%= enrollment.address %></td>
        <td><%= enrollment.birth_place %></td>
        <td><%= link_to 'Show', enrollment %></td>
        <td><%= link_to 'Edit', edit_enrollment_path(enrollment) %></td>
        <td><%= link_to 'Destroy', enrollment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Enrollment', new_enrollment_path %>
