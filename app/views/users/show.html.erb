<%= form_for current_user.profile, url: {:controller => :users, :action => :updateprofile} do |f| %>

    <div class="field">
      <%= f.label :image %></label>
      <%= f.file_field :avatar %>
    </div>

    <div class="field">
      <%= f.label :firstname %>
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
      <%= f.label :lastname %>
      <%= f.text_field :last_name %>
    </div>

    <%= f.submit %>


<% end %>

