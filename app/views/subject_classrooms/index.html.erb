<p id="notice"><%= notice %></p>

<h1>Subject Classrooms</h1>

<table>
  <thead>
    <tr>
      <th>Classroom</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subject_classrooms.each do |subject_classroom| %>
      <tr>
        <td><%= subject_classroom.classroom %></td>
        <td><%= subject_classroom.subject %></td>
        <td><%= link_to 'Show', subject_classroom %></td>
        <td><%= link_to 'Edit', edit_subject_classroom_path(subject_classroom) %></td>
        <td><%= link_to 'Destroy', subject_classroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

